FROM node:alpine

WORKDIR $HOME/mmdp/

ARG NODE_ENV=development
ENV NODE_ENV=$NODE_ENV

ARG SERVER_APP_API_URL=http://0.0.0.0:3000
ENV SERVER_APP_API_URL=$SERVER_APP_API_URL

ARG DEV_SERVER_API_URL=http://0.0.0.0:3000
ENV DEV_SERVER_API_URL=$DEV_SERVER_API_URL

COPY ./package.json ./

COPY ./ ./

RUN yarn install

EXPOSE 1234
CMD ["yarn", "run", "client:dev"]

{
  "name": "mmdp-cms",
  "version": "1.0.0",
  "description": "Content Management System fo the MMDP website",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node ./dist/index.js",
    "build": "parcel build ./client/index.js --out-dir ./server/public/js && npm run clean && babel ./server -d dist/ --copy-files",
    "clean": "rimraf dist/",
    "dev": "npm-run-all --parallel run:server watch:build",
    "run:server": "babel-node ./server/index.js",
    "client:dev": "./node_modules/.bin/parcel client/index.html",
    "client:watch": "./node_modules/.bin/parcel watch client/index.html",
    "client:build": "./node_modules/.bin/parcel build client/index.html",
    "watch:build": "parcel watch ./client/index.js --out-dir ./server/public/js --no-cache",
    "test:server": "mocha --require babel-register ./server/__tests__ --reporter spec --timeout 10000 --exit",
    "test:client": "jest --coverage",
    "test:client:watch": "jest --watch",
    "coverage:server": "nyc --reporter html --reporter text --report-dir ./server/coverage npm run test:server"
  },
  "author": "MMDP",
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-preset-react-app": "^7.0.0",
    "dotenv": "^6.2.0",
    "keystone": "^4.0.0",
    "node-sass-middleware": "^0.11.0",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.2",
    "regenerator": "^0.13.3",
    "regenerator-runtime": "^0.13.1",
    "semantic-ui-react": "^0.84.0",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-es2016": "^7.0.0-beta.53",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-stage-3": "^7.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "chai": "^4.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "jest": "^23.6.0",
    "jest-enzyme": "^7.0.1",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "parcel-bundler": "^1.11.0",
    "should": "^13.2.3",
    "supertest": "^3.3.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/client/__tests__/setup/setupEnzyme.js",
    "testPathIgnorePatterns": [
      "<rootDir>/client/__tests__/setup/",
      "<rootDir>/server/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/client/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/client/__mocks__/styleMock.js"
    },
    "collectCoverageFrom": [
      "client/**/*.{js,jsx}",
      "!**/coverage/**",
      "!client/index.js"
    ],
    "coverageDirectory": "./client/coverage",
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  }
}

{
  "name": "mmdp-cms",
  "version": "1.0.0",
  "description": "Content Management System fo the MMDP website",
  "main": "index.js",
  "scripts": {
    "start": "yarn run build && node ./dist/index.js",
    "build": "parcel build ./client/index.js --out-dir ./server/public/js && yarn run clean && babel ./server -d dist/ --copy-files",
    "clean": "rimraf dist/",
    "dev": "npm-run-all --parallel run:server watch:build",
    "client:dev": "parcel client/index.html",
    "client:watch": "parcel watch client/index.html",
    "client:build": "parcel build client/index.html",
    "run:server": "nodemon ./server/index.js --exec babel-node",
    "watch:build": "parcel watch ./client/index.js --out-dir ./server/public/js --no-cache",
    "test:server": "NODE_ENV=test mocha --require babel-register ./server/__tests__/** --reporter spec --timeout 10000 --exit",
    "test:client": "jest  --coverage",
    "test:client:watch": "jest  --require babel-register --watch",
    "coverage:server": "nyc --reporter html --reporter text --report-dir ./server/coverage yarn run test:server",
    "pretest": "yarn run lint",
    "lint": "eslint . --fix "
  },
  "author": "MMDP",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.3",
    "dotenv": "^6.2.0",
    "express-validation": "^1.0.2",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "keystone": "^4.0.0",
    "node-sass-middleware": "^0.11.0",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.2",
    "regenerator": "^0.13.3",
    "regenerator-runtime": "^0.13.1",
    "semantic-ui-react": "^0.84.0",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-register": "^7.0.0-beta.3",
    "babel-runtime": "^7.0.0-beta.3",
    "chai": "^4.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "jest": "^23.6.0",
    "jest-enzyme": "^7.0.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "parcel-bundler": "^1.11.0",
    "react-router-enzyme-context": "^1.2.0",
    "should": "^13.2.3",
    "sinon": "^7.2.2",
    "supertest": "^3.3.0",
    "yarn-run-all": "^3.1.1"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/client/__tests__/setup/setupEnzyme.js",
    "testPathIgnorePatterns": [
      "<rootDir>/client/__tests__/setup/",
      "<rootDir>/server/"
    ],
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/client/__mocks__/fileMock.js",
      "\\.(css|scss|sass)$": "<rootDir>/client/__mocks__/styleMock.js"
    },
    "collectCoverageFrom": [
      "client/**/*.{js,jsx}",
      "!**/coverage/**",
      "!client/store/index.js",
      "!client/store/reducer/index.js",
      "!client/index.js"
    ],
    "coverageDirectory": "./client/coverage",
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  }
}
